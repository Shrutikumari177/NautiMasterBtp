<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog
        id="previewDialog"
        title="Preview Data"
        stretch="true"
        verticalScrolling="true"
        contentWidth="auto"
        contentHeight="auto"
        beginButton="{closeButton}">
 
        <!-- Table -->
        <Table id="previewTable" mode="MultiSelect" showSeparators="All">
            <!-- Columns -->
            <columns >
                <Column width="120px" hAlign="Begin" vAlign="Middle" >
                    <Label text="From Port"/>
                </Column>
                <Column width="120px" hAlign="Begin" vAlign="Middle">
                    <Label text="To Port"/>
                </Column>
                <Column width="120px" hAlign="Begin" vAlign="Middle">
                    <Label text="Distance"/>
                </Column>
                
            </columns>
            <!-- Items -->
            <items>
                <ColumnListItem>
                    <cells>
                        <Text text="{FromPort}"/>
                        <Text text="{ToPort}"/>
                        <Text text="{Distance}"/>
                        
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
        <beginButton>
            <Button press="onPreviewDialogClose" text="Close"  type="Back"></Button>
        </beginButton>
    </Dialog>
</core:FragmentDefinition>
 